{
  "name": "aria-build",
  "version": "0.2.2",
  "description": "Build any web components",
  "main": "aria-build.js",
  "bin": {
    "aria-build": "./bin/aria-build.js"
  },
  "scripts": {
    "fs": "aria-fs",
    "build": "node ./bin/aria-build.js -d --external aria-fs",
    "bundle": "ts-node --project ./tools/tsconfig.json ./tools/bundle.ts",
    "build.packages": "ts-node tools/packages.ts",
    "reset.packages": "sh ./reset-packages.sh",
    "test": "aria-mocha --check-coverage --threshold statements=90,functions=90,branches=85,lines=90",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aelbore/aria-build.git"
  },
  "keywords": [
    "build",
    "rollup",
    "bundle",
    "plugins",
    "modules",
    "bundler",
    "bundling",
    "es6",
    "optimizer"
  ],
  "author": "Arjay Elbore",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/aelbore/aria-build/issues"
  },
  "homepage": "https://github.com/aelbore/aria-build#readme",
  "peerDependencies": {
    "aria-fs": ">= ^0.2.2",
    "aria-mocha": ">= ^0.2.2",
    "typescript": ">= ^3.7.4 <= ^3.8.2"
  },
  "devDependencies": {
    "@types/mocha": "^7.0.1",
    "@types/mock-fs": "^4.10.0",
    "@types/node": "^13.7.6",
    "coveralls": "^3.0.9",
    "mock-fs": "^4.11.0",
    "mock-require": "^3.0.3",
    "typescript": "^3.8.2"
  },
  "dependencies": {
    "@rollup/plugin-commonjs": "^11.0.2",
    "@rollup/plugin-json": "^4.0.2",
    "@rollup/plugin-multi-entry": "^3.0.0",
    "@rollup/plugin-node-resolve": "^7.1.1",
    "@rollup/plugin-replace": "^2.3.1",
    "@rollup/plugin-url": "^4.0.2",
    "rollup": "^1.32.0",
    "rollup-plugin-minify-html-literals": "^1.2.3",
    "rollup-plugin-terser": "^5.2.0",
    "rollup-plugin-typescript2": "^0.26.0",
    "sade": "^1.7.3",
    "ts-node": "^8.6.2"
  }
}
