{
  "name": "aria-build",
  "version": "0.3.0",
  "description": "Build any web components",
  "main": "aria-build.js",
  "bin": {
    "aria-build": "./bin/aria-build.js"
  },
  "scripts": {
    "build": "node ./bin/aria-build.js -d --esbuild",
    "bundle": "ts-node --project ./tools/tsconfig.json ./tools/bundle.ts",
    "test": "aria-mocha --check-coverage",
    "test.e2e": "aria-mocha -d ./e2e",
    "coveralls": "ts-node --project ./tools/tsconfig.json ./tools/coveralls.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aelbore/aria-build.git"
  },
  "keywords": [
    "build",
    "rollup",
    "bundle",
    "plugins",
    "modules",
    "bundler",
    "bundling",
    "es6",
    "optimizer"
  ],
  "author": "Arjay Elbore",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/aelbore/aria-build/issues"
  },
  "homepage": "https://github.com/aelbore/aria-build#readme",
  "peerDependencies": {
    "aria-fs": ">= ^0.3.0",
    "typescript": ">= ^3.7.4 <= 3.8.3"
  },
  "devDependencies": {
    "@types/mocha": "^7.0.2",
    "@types/mock-fs": "^4.10.0",
    "@types/node": "^14.0.1",
    "coveralls": "^3.1.0",
    "mock-fs": "^4.12.0",
    "mock-require": "^3.0.3",
    "sinon": "^9.0.2",
    "typescript": "3.8.3"
  },
  "dependencies": {
    "@rollup/plugin-commonjs": "^11.1.0",
    "@rollup/plugin-json": "^4.0.3",
    "@rollup/plugin-multi-entry": "^3.0.1",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "@rollup/plugin-replace": "^2.3.2",
    "@rollup/plugin-url": "^5.0.0",
    "esbuild": "0.3.3",
    "magic-string": "^0.25.7",
    "rollup": "^2.10.2",
    "rollup-plugin-dts": "1.4.4",
    "rollup-plugin-hot": "^0.0.21",
    "rollup-plugin-minify-html-literals": "^1.2.3",
    "rollup-plugin-terser": "^5.3.0",
    "rollup-plugin-typescript2": "^0.27.1",
    "sade": "^1.7.3",
    "ts-node": "^8.10.1"
  }
}
